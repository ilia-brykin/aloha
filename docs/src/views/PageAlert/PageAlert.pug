aloha-page(
  :page-title="pageTitle"
)
  template(
    v-slot:body
  )
    a-translation(
      tag="p"
      html="_A_ALERT_COMPONENT_DESCRIPTION_"
    )

    page-alert-basic

    page-alert-types

    page-alert-icons-default

    page-alert-icons-custom

    page-alert-css

    page-alert-closable

    page-alert-closable-from-outside

    page-alert-html

    page-alert-slot

    page-alert-exposes

