aloha-example(
  :code-html="codeHtml"
  :code-js="codeJs"
  header="_A_MODAL_GROUP_SLOTS_HEADER_"
  description="_A_MODAL_GROUP_SLOTS_DESCRIPTION_"
  :slots="['modalHeader', 'modalBody', 'modalFooterPrepend', 'modalFooterAppend']"
)
  a-button(
    class="a_btn a_btn_primary"
    text="_A_MODAL_PAGE_BTN_OPEN_MODAL_"
    @click="openModal"
  )

  a-modal(
    v-if="isModalVisible"
    :close="closeModal"
  )
    template(
      v-slot:modalHeader
    )
      span Aloha

    template(
      v-slot:modalBody
    )
      div Lorem ipsum dolor sit amet consectetur adipisicing elit.

    template(
      v-slot:modalFooterPrepend
    )
      a-button(
        class="a_btn a_btn_primary"
        icon-left="ChevronLeft"
      )

    template(
      v-slot:modalFooterAppend
    )
      a-button(
        class="a_btn a_btn_primary"
        text="Aloha"
      )