div
  a-table-top-panel(
    :columns="columns"
    :is-loading="isLoading"
    v-model:model-columns="modelColumns"
  )
  table.table
    a-table-header(
      :columns="columns"
      :model-columns-mapping="modelColumnsMapping"
      :model-sort="modelSort"
      :is-loading="isLoading"
      @change-model-sort="changeModelSort"
    )
    tbody
      a-table-tr(
        v-for="(row, rowIndex) in rowsLocal"
        :key="rowIndex"
        :row="row"
        :row-index="rowIndex"
        :columns="columns"
        :model-columns-mapping="modelColumnsMapping"
        :is-loading="isLoading"
      )
        template(
          v-for="(_, slotName) in $slots"
          v-slot:[slotName]="slotProps"
        )
          slot(
            :name="slotName"
            v-bind="slotProps"
          )
  a-table-pagination(
    v-model:offset="offset"
    :limit="limit"
    :total-rows-count="totalRowsCountLocal"
    :is-loading="isLoading"
  )
  a-table-count-pro-page(
    v-model:limit="limit"
    :is-loading="isLoading"
  )
