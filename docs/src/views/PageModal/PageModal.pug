div
  h1 AModal
  button.a_btn.a_btn_primary(
    id="btn_modal"
    type="button"
    @click="openModal"
  ) Open Modal

  a-modal(
    v-if="isModalOpen"
    size="xxl"
    :close="closeModal"
    selector-close="#btn_modal"
  )
    template(
      v-slot:modalBodyPrepend
    )
      button.a_btn.a_btn_secondary(
        type="button"
        @click="openConfirmLocal"
      ) Open confirm