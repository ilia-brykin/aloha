aloha-example(
  :code-html="codeHtml"
  :code-js="codeJs"
  header="_A_UI_GROUP_SHOW_STOPS_HEADER_"
  description="_A_UI_GROUP_SHOW_STOPS_DESCRIPTION_"
  :props="['vertical', 'height']"
)
  .a_columns.a_columns_count_12
    .a_column.a_column_3.a_column_6_tablet.a_column_12_mobile
      a-slider(
        v-model="model1"
        :max="20"
        :vertical="true"
        height="200px"
        label="_A_SLIDER_LABEL_NOT_SHOW_STOPS_"
      )
      div model1 {{ model1 }}
    .a_column.a_column_3.a_column_6_tablet.a_column_12_mobile
      a-slider(
        v-model="model2"
        :max="10"
        :show-stops="true"
        :vertical="true"
        height="200px"
        label="_A_SLIDER_LABEL_SHOW_STOPS_"
      )
      div model2 {{ model2 }}
    .a_column.a_column_3.a_column_6_tablet.a_column_12_mobile
      a-slider(
        v-model="model3"
        :extra="{ min: 10, max: 40 }"
        :max="40"
        :min="10"
        :range="true"
        :vertical="true"
        height="200px"
        label="_A_SLIDER_RANGE_LABEL_{{max}}_{{min}}_"
      )
      div model3 {{ model3 }}
