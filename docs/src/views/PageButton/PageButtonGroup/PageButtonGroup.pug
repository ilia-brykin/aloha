  :code-html="codeHtml"
  :code-js="codeJs"
  header="_A_BUTTON_GROUP_GROUP_HEADER_"
  description="_A_BUTTON_GROUP_GROUP_DESCRIPTION_"
  props="class"
)
  .a_btn_group
    a-button(
      class="a_btn a_btn_primary"
      text="primary"
      @click="onAlert('primary')"
    )
    a-button(
      class="a_btn a_btn_secondary"
      text="secondary"
      @click="onAlert('secondary')"
    )
    a-button(
      class="a_btn a_btn_success"
      text="success"
      @click="onAlert('success')"
    )
    a-button(
      class="a_btn a_btn_info"
      text="info"
      @click="onAlert('info')"
    )
