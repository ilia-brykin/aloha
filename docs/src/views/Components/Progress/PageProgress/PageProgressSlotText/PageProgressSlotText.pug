aloha-example(
  :code-html="codeHtml"
  :code-js="codeJs"
  header="_A_PROGRESS_GROUP_SLOT_PROGRESS_TEXT_HEADER_"
  description="_A_PROGRESS_GROUP_SLOT_PROGRESS_TEXT_DESCRIPTION_"
  slots="progressText"
)
  a-progress(
    :value="20"
  )
    template(
      v-slot:progressText="{ valuePercent }"
    )
      span Aloha {{ valuePercent }}

  a-progress(
    class="a_mt_4"
    :value="40"
  )
    template(
      v-slot:progressText="{ valuePercent }"
    )
      span $$$ {{ valuePercent }}
