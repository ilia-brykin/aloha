  description="_A_MODAL_GROUP_FOOTER_STICKY_DESCRIPTION_"
  :props="['is-footer-sticky']"
)
  a-button(
    class="a_btn a_btn_primary"
    text="_A_MODAL_PAGE_BTN_OPEN_MODAL_"
